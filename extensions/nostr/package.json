{
  "name": "@epiloop/nostr",
  "version": "2026.1.23",
  "type": "module",
  "description": "Epiloop Nostr channel plugin for NIP-04 encrypted DMs",
  "epiloop": {
    "extensions": [
      "./index.ts"
    ],
    "channel": {
      "id": "nostr",
      "label": "Nostr",
      "selectionLabel": "Nostr (NIP-04 DMs)",
      "docsPath": "/channels/nostr",
      "docsLabel": "nostr",
      "blurb": "Decentralized protocol; encrypted DMs via NIP-04.",
      "order": 55,
      "quickstartAllowFrom": true
    },
    "install": {
      "npmSpec": "@epiloop/nostr",
      "localPath": "extensions/nostr",
      "defaultChoice": "npm"
    }
  },
  "dependencies": {
    "epiloop": "workspace:*",
    "nostr-tools": "^2.20.0",
    "zod": "^4.3.6"
  }
}
